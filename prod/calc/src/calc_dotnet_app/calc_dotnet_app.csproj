<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <RootNamespace>CalcDotNetApp</RootNamespace>
    <AssemblyName>calc_dotnet_app</AssemblyName>
    <Version>1.0.0</Version>
    <Authors>c-modernization-kit sample team</Authors>
    <Description>.NET version of the calc command-line application</Description>
    <Copyright>Copyright (C) CompanyName, Ltd. 2025. All rights reserved.</Copyright>
  </PropertyGroup>

  <!-- RelWithDebInfo configuration: optimized with debug symbols -->
  <PropertyGroup Condition="'$(Configuration)' == 'RelWithDebInfo'">
    <Optimize>true</Optimize>
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <!-- Reference the CalcDotNet library -->
  <ItemGroup>
    <ProjectReference Include="../../libsrc/calc_dotnet/calc_dotnet.csproj" />
  </ItemGroup>

  <!-- Copy native library to output directory -->
  <ItemGroup>
    <None Include="../../lib/libcalc.so"
          Condition="'$(OS)' != 'Windows_NT'"
          CopyToOutputDirectory="PreserveNewest"
          Visible="false" />
    <None Include="../../lib/calc.dll"
          Condition="'$(OS)' == 'Windows_NT'"
          CopyToOutputDirectory="PreserveNewest"
          Visible="false" />
  </ItemGroup>
</Project>
