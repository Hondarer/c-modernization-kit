{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/prod/include",
                "${workspaceFolder}/prod/calc/include",
                "${workspaceFolder}/prod/subfolder-sample/include",
                "${workspaceFolder}/prod/util/include",
                "${workspaceFolder}/prod/override-sample/include",
                "${workspaceFolder}/testfw/include",
                "${workspaceFolder}/testfw/gtest/include",
                "${workspaceFolder}/test/calc/include"
            ],
            "defines": [
                "_DEFAULT_SOURCE", // __USE_MISC を有効にしてインテリセンスを効かせるため
                "TARGET_ARCH=\"\"", // makefw/makefiles/prepare.mk で定義される TARGET_ARCH をインテリセンスで模擬するため (コンパイル時には環境に応じて適切な値が渡される)
                "C_MODERNIZATION_KIT" // ユーザー指定の define の例
            ],
            "compilerPath": "/usr/bin/gcc",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "linux-gcc-x64"
        },
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/prod/include",
                "${workspaceFolder}/prod/calc/include",
                "${workspaceFolder}/prod/subfolder-sample/include",
                "${workspaceFolder}/prod/util/include",
                "${workspaceFolder}/prod/override-sample/include",
                "${workspaceFolder}/testfw/include",
                "${workspaceFolder}/testfw/gtest/include",
                "${workspaceFolder}/test/calc/include"
            ],
            "defines": [
                // 安全のため、_CRT_SECURE_NO_WARNINGS は指定しない
                "TARGET_ARCH=\"\"", // makefw/makefiles/prepare.mk で定義される TARGET_ARCH をインテリセンスで模擬するため (コンパイル時には環境に応じて適切な値が渡される)
                "C_MODERNIZATION_KIT" // ユーザー指定の define の例
            ],
            "compilerPath": "cl.exe",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "windows-msvc-x64"
        }
    ],
    "version": 4
}
