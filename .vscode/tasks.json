        {
            "label": "exec pandoc",
            "type": "shell",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "windows": {
                "command": "docsfw\\bin\\pub_markdown.cmd /workspaceFolder:\"${workspaceFolder}\"",
                "options": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": ["/c"]
                    }
                }
            },
            "linux": {
                "command": "bash -i docsfw/bin/pub_markdown_core.sh --workspaceFolder=\"${workspaceFolder}\""
            }
        },
