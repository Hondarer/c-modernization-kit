{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Linux gdb) Debug current directory",
            "type": "cppdbg",
            "request": "launch",
            "program": "/bin/bash",
            "args": [
                "-c",
                "ulimit -s `ulimit -H -s` && ./$(basename `pwd`)"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/prod/calc/lib:${env:LD_LIBRARY_PATH}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make all (current dir)",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "engineLogging": true
            },
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "(Linux gdb) Attach to PID",
            "type": "cppdbg",
            "request": "attach",
            "program": "${input:programPath}",
            "processId": "${input:processId}",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(Windows vsdbg) Debug current directory",
            "request": "launch",
            "type": "cppvsdbg",
            "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "args": [
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${workspaceFolder}/prod/calc/lib;${env:PATH}"
                }
            ],
            "console": "integratedTerminal",
            "preLaunchTask": "make all (current dir)"
        },
        {
            "name": "(Windows vsdbg) Attach to PID",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${input:processId}"
        }
    ],
    "inputs": [
        {
            "id": "processId",
            "type": "promptString",
            "description": "Enter the process ID to attach to"
        },
        {
            "id": "programPath",
            "type": "promptString",
            "description": "Enter the program path (relative to workspace or absolute)"
        }
    ]
}
