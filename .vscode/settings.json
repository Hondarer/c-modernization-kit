{
    "terminal.integrated.scrollback": 20000,
    "makefile.configureOnOpen": false,
    "files.associations": {
        "c_cpp_properties.json": "jsonc",
        ".debug-params.json": "jsonc",
        "Doxyfile.part": "shellscript",
        "Doxyfile.part.*": "shellscript"
    },
    "terminal.integrated.env.linux": {
        "LD_LIBRARY_PATH": "${workspaceFolder}/prod/calc/lib:${workspaceFolder}/prod/calc.net/lib:${workspaceFolder}/prod/override-sample/lib:${env:LD_LIBRARY_PATH}",
        "PATH": "${workspaceFolder}/prod/calc/bin:${workspaceFolder}/prod/calc.net/bin:${workspaceFolder}/prod/override-sample/bin:${env:PATH}"
    },
    "terminal.integrated.env.windows": {
        "PATH": "${workspaceFolder}\\prod\\calc\\lib;${workspaceFolder}\\prod\\calc\\bin;${workspaceFolder}\\prod\\calc.net\\lib;${workspaceFolder}\\prod\\calc.net\\bin;${workspaceFolder}\\prod\\override-sample\\lib;${workspaceFolder}\\prod\\override-sample\\bin;${env:PATH}"
    },
    "dotnet.defaultSolution": "disable",
    "C_Cpp.formatting": "clangFormat",
    "todohighlight.keywords": [
        {
            "text": "@todo",
            "color": "#fff",
            "backgroundColor": "#ffbd2a",
            "overviewRulerColor": "rgba(255,189,42,0.8)"
        },
    ] // https://marketplace.visualstudio.com/items?itemName=wayou.vscode-todo-highlight
}
